<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btngrade"
        android:onClick="grade"
        android:text="Grade"
        android:background="@color/colorPrimaryDark"
        android:textColor="?attr/colorButtonNormal"
        android:layout_above="@+id/btnOffHour"
        android:layout_alignStart="@+id/btnOffHour" />

    <Button
        android:text="Delete Course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDelete"
        android:onClick="delete"
        android:background="@color/colorPrimaryDark"
        android:textColor="?attr/colorButtonNormal"
        android:layout_marginBottom="95dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Progress Report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnprogressreport"
        android:onClick="progressReport"
        android:textColor="?attr/colorButtonNormal"
        android:background="@color/colorPrimaryDark"
        android:layout_above="@+id/btnDelete"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Office hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="offHour"
        android:id="@+id/btnOffHour"
        android:textColor="?attr/colorButtonNormal"
        android:background="@color/colorPrimaryDark"
        android:layout_marginBottom="54dp"
        android:layout_above="@+id/btnDelete"
        android:layout_centerHorizontal="true" />

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/toolbar2" />

    <TextView
        android:text="COMP 3004"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtCourseName"
        android:textSize="30sp"
        android:textColor="?attr/colorBackgroundFloating"
        android:layout_below="@+id/toolbar2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp" />

    <TextView
        android:text="Student"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtStudentName"
        android:textSize="30sp"
        android:textColor="?attr/colorBackgroundFloating"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/btnprogressreport" />
</RelativeLayout>